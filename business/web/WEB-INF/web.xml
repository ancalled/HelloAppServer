<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">


    <filter>
        <filter-name>authFilter</filter-name>
        <filter-class>com.mcsm.hellapp.business.view.BusinessAuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authFilter</filter-name>
        <url-pattern>/cabinet/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>businessDispatcher</servlet-name>
        <servlet-class>com.mcsm.hellapp.business.view.DispatcherServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>businessAuth</servlet-name>
        <servlet-class>com.mcsm.hellapp.business.view.AuthServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>businessDispatcher</servlet-name>
        <url-pattern>/cabinet/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>businessAuth</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>


</web-app>
